@model BoxProblem.Data.BoxInventory;
@{
    ViewData["Title"] = "Delete";
}
<link href="~/bootstrap.css" rel="stylesheet" />
<link href="~/css/StyleSheet.css" rel="stylesheet" />

<h2>Delete</h2>
<h3>Are you sure you want to delete this?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <dl class="dl-horizontal">
            <dt class="deleteLabels">
                Weight
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Weight)
            </dd>

            <dt class="deleteLabels">
                Volume
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Volume)
            </dd>
            <dt class="deleteLabels">
                Inventory Count
            </dt>

            <dd>
                @Html.DisplayFor(model => model.InventoryCount)
            </dd>
            <dt class="deleteLabels">
                Can Hold Liquid
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CanHoldLiquid)
            </dd>
            <dt class="deleteLabels">
                Cost
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cost)
            </dd>
        </dl>

    </div>

    <div class="form-group">
        <div>
            <input type="submit" value="Delete" class="btn" id="alertButton" />
            <div>
                @Html.ActionLink("Back to List", "Index", "Box", null, new { @class = "btn", @id = "navButton" })
            </div>
        </div>
    </div>


}
